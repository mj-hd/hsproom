		function convertArrayBufferToBase64(buffer) {
			var result = '';
			var bytes = new Uint8Array(buffer);
			var len = bytes.byteLength;
			for (var i = 0; i < len; i++) {
				result += String.fromCharCode(bytes[i]);
			}
			return window.btoa(result);
		}

